<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="2dp"
        android:layout_below="@+id/message_sender_name"
        android:src="@drawable/default_image" />

    <TextView
        android:id="@+id/message_sender_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:background="@color/DarkSeaGreen"
        android:text="receiver messages here"
        android:textColor="@color/Black"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/member_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/message_profile_image"
        android:layout_below="@+id/message_sender_name"
        android:background="@drawable/sender_private_messages_layout"
        android:padding="12dp"
        android:text="receiver messages here"
        android:textColor="@color/Black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/message_profile_image"
        android:layout_below="@+id/member_message_text"
        android:layout_marginLeft="10dp"
        android:background="@color/DarkSeaGreen"
        android:text="receiver messages here"
        android:textColor="@color/DarkGreen"
        android:textSize="10sp"
        android:textStyle="bold" />

</RelativeLayout>